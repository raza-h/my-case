@model AbsolCase.Models.Service

@{
    ViewData["Title"] = "Update Service";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}

<h2>Update Service</h2>
<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateService" method="post">
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Service Name</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger db" })
            </div>
            <br />
            <button type="submit" class="btn btn-lg btn-primary me-3" style="float:right">Update</button>
        </form>
    </div>
</div>

<div>
    @* <a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

