@model AbsolCase.Models.Service

@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}

@if (TempData["response"] != null)
{
    <div class="alert-danger" id="msgalert">
        @TempData["response"].ToString()
    </div>
}

<form class="forms-sample" method="post" action="AddService">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="exampleInputName1">Service Name</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger db" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <button class="btn btn-dark fr">Add Service</button>
            </div>
        </div>
    </div>
</form>