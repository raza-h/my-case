@model AbsolCase.Models.Faq
@{
    ViewData["Title"] = "AddFAQuestions";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}
@if (TempData["response"] != null)
{
    <div class="alert-danger" id="msgalert">
        @TempData["response"].ToString()
    </div>
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Faqs</h4>
           
            @using (Html.BeginForm("AddFAQuestions", "FAQA", FormMethod.Post, new { area = "Administration", @class = "forms-sample" }))
            {
                <div class="form-group">
                    <label for="exampleInputUsername1">Question<span style="font-weight:bolder;font-size:18px;color:red">*</span></label>
                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control", placeholder = "Tittle" } })
                    @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger db" })
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Answer<span style="font-weight:bolder;font-size:18px;color:red">*</span></label>

                    @Html.TextAreaFor(model => model.Answer, new { @class = "form-control", @style = "height:100px" })
                    @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger db" })

                </div>
                    <input type="submit" value="Create" class="btn btn-dark fr" />
                    }
                </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>


