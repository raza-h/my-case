@model AbsolCase.Models.Faq
@{
    ViewData["Title"] = "UpdateFAQuestions";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}




@if (TempData["response"] != null)
{
    <div class="alert-danger" id="msgalert">
        @TempData["response"].ToString()
    </div>
}




<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Faqs</h4>
            @*<p class="card-description">
            Basic form layout
        </p>*@
            @using (Html.BeginForm("UpdateFAQuestions", "FAQA", FormMethod.Post, new { area = "Administration", @class = "forms-sample" }))
            {
                @Html.HiddenFor(model => model.Id)

                @Html.HiddenFor(model => model.CreatedDate)

                @Html.HiddenFor(model => model.CreatedBy)
            
                
                <div class="form-group">
                    <label for="exampleInputUsername1">Title<span style="font-weight:bolder;font-size:18px;color:red">*</span></label>
                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control", placeholder = "Tittle" } })
                    @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger db" })

                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Description<span style="font-weight:bolder;font-size:18px;color:red">*</span></label>

                    @Html.TextAreaFor(model => model.Answer, new { @class = "form-control", @style = "height:100px" })
                    @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger db" })

                </div>

                <input type="submit" value="Update" class="btn btn-info fr" />
                @*<button class="btn btn-light">Cancel</button>*@
            }
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>


