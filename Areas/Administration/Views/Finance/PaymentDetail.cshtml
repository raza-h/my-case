@model AbsolCase.Models.PaymentInfoDto
@{
    if (Model.UserData == null)
        Model.UserData = new AbsolCase.Models.UserDto();
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}
<style>
    @@media print{
        body *{
            visibility:hidden;
        }
        .print-container, .print-container *{
            visibility:visible;
        }
        .print-container{
            position:absolute;
            left:0px;
            top:0px;
        }
    }
</style>
<div class="row">
    <div class="container-fluid w-100">
        <button class="btn btn-primary float-right mt-4 ms-2" style="float:right" onclick="window.print();"><i class="ti-printer me-1"></i>Print</button>
    </div>
    <div class="col-lg-12 print-container">
        <div class="card px-2">
            <div class="container-fluid" style="margin-top: 20px">
                <h3 class="text-right">Invoice&nbsp;&nbsp;#@Model.InvoiceNo</h3>
                <hr>
            </div>
            <div class="container-fluid d-flex justify-content-between">
                <div class="col-lg-3 ps-0">
                    <p class="mb-2 text-right"><b>Invoice from</b></p>
                    <p class="mb-2"><b>@Model.UserData.FirstName @Model.UserData.LastName</b></p>
                    <p>@Model.UserData.Address,<br>@Model.UserData.State, @Model.UserData.City @Model.UserData.PostCode.</p>
                </div>
                <div class="col-lg-3 pr-0">
                    <p class="mb-2 text-right"><b>Invoice to</b></p>
                    <p class="mb-2"><b>Absol Case</b></p>
                    <p class="text-right">C-201, Beykoz-34800,<br> USA, K1A 0G9.</p>
                </div>
            </div>
            <div class="container-fluid d-flex justify-content-between">
                <div class="col-lg-3 ps-0" style="margin-bottom: 15px">
                    <p class="mb-0" style="font-weight: bold">Invoice Date : @Html.FormatValue("dd/MM/yyyy", Model.PaymentDate.ToString("dd/MM/yyyy"))</p>
                </div>
            </div>
            <div class="container-fluid d-flex justify-content-center w-100">
                <div class="table-responsive w-100">
                    <table class="table">
                        <thead>
                            <tr class="bg-dark text-white">
                                <th>Package Name</th>
                                <th class="text-right">Price</th>
                                <th class="text-right">Payment Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-right">
                                <td class="text-left">@Model.PlanName</td>
                                <td>$@Model.Price</td>
                                <td>@Model.PaymentType</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container-fluid w-100">
                <h4 class="text-right mb-5">Total : $@Model.Price</h4>
                <hr>
            </div>
        </div>
    </div>
</div>

