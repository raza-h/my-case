@model List<AbsolCase.Models.CaseDetail>
@{
    ViewData["Title"] = "AllCasesInvoices";
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.js"></script>

<link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
<style>
    tr {
        border-bottom: 2px solid black;
    }
</style>
<div class="container" style="margin:4rem;">
    <div class="row mb-5">
        <h2>All Clients</h2>
    </div>

    <div class="row mb-5">
        <table>
            @if (Model != null || Model.Count > 0)
            {
                <tr>
                    <td style="text-align:start;background-color:white">
                        <h4 style="color: black; text-align: initial"><strong>@Model.ElementAt(0).firm.FirmName</strong></h4>
                        <h4 style="text-align: initial">@Model.ElementAt(0).firm.OwnerName</h4>
                        <h4 style="text-align: initial">
                            @Model.ElementAt(0).firm.FirmWebsite
                        </h4>
                        <h4 style="text-align: initial">@Model.ElementAt(0).firm.FirmEmail</h4>
                        <h4 style="text-align: initial">
                            @Model.ElementAt(0).firm.FirmNumber
                        </h4>
                    </td>
                    <td style="background-color: white">
                        <img src="~/Logo/Law-Office-of-Lydia-Charles.png" style="width: 330px;" />
                    </td>
                </tr>
            }
        </table>
    </div>


    <div class="row">
        <table style="width: 100%; line-height:15px; border: solid">
            <tr>
                <th style="text-align: initial;height:2rem;  border-collapse: collapse; ">Case Name</th>
                <th style="text-align: initial;height:2rem;  border-collapse: collapse; ">Case Number</th>
                <th style="text-align: initial;height:2rem;  border-collapse: collapse; ">Case Stage</th>
                <th style="text-align: initial;height:2rem;  border-collapse: collapse; ">Practice Area</th>
                <th style="text-align: initial;height:2rem;  border-collapse: collapse; ">Office</th>
                <th style="text-align: initial;height:2rem;  border-collapse: collapse; ">Description</th>
            </tr>
            @if (Model != null || Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 20px;height:2rem; text-align: start; ">@item.CaseName</td>
                        <td style="width: 20px;height:2rem; text-align: start; ">@item.CaseNumber</td>
                        <td style="width: 20px;height:2rem; text-align: start; ">@item.CaseStage</td>
                        <td style="width: 20px;height:2rem; text-align: start; ">@item.PracticeAreaName</td>
                        <td style="width: 20px;height:2rem; text-align: start; ">@item.Office</td>
                        <td style="width: 20px;height:2rem; text-align: start; ">@item.Description</td>
                    </tr>
                }
            }
        </table>
    </div>

</div>


<script src="~/jquery/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
