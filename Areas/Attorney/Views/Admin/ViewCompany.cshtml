                                            <input type="number" class="form-control" value="@itemm.Value" id="@("custom-"+ item.FieldId)" disabled />
                                        }
                                    }
                                }
                                else
                                {
                                    <input type="number" class="form-control" id="@("custom-"+ item.FieldId)" disabled />
                                }

                            </div>
                        }
                    }
                }
                @*</div>*@

