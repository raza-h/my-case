    function DeleteContact(id) {
        token = localStorage.getItem('token');
        $.ajax({
            type: 'Delete',
            url: `${remoteServerURl}api/CompanyManagement/Delete?Id=` + id,
            headers: { "Authorization": 'Bearer ' + token }
        }).done(function (data) {
            toastr.success("Company Deleted Successfully");
