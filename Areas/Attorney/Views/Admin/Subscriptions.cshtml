@model List<AbsolCase.Models.Service>
@{
    ViewData["Title"] = "Subscriptions";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card mt-3 ms-3 me-4 pe-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Your Paid Invoices</h4>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped  dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr role="row">
                                    <th>Sr No.</th>
                                    <th>Service Name</th>
                                    @*<th>Package Name</th>
                                    <th>Price</th>
                                    <th>Transaction Date</th>
                                    <th>Email</th>
                                    <th>Action</th>*@

                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    int count = 0;
                                    @foreach (var payment in Model)
                                    {
                                        count++;
                                        <tr class="odd">
                                            <td class="sorting_1">@count</td>
                                            <td>@payment.Name</td>
                                            @*<td>@payment.PlanName</td>
                                    <td>@payment.Price</td>
                                    <td>@Html.FormatValue("dd/MM/yyyy", payment.PaymentDate.ToString("dd/MM/yyyy"))</td>
                                    <td>@payment.Email</td>
                                    <td>
                                    @Html.ActionLink("View Detail", "InvoiceDetail", "Finance", new { paymentId = payment.Id })
                                    </td>*@
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

