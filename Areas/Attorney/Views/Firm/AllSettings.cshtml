
@{
    ViewData["Title"] = "AllSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card{
        border-radius:10px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    Common Settings
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="ms-5">
                                <img src="~/images/add-user.png" width="50" height="50">
                            </div>
                            <label class="ms-3">Add a New User</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="ms-5">
                                <img src="~/images/multiple-contact.png" width="50" height="50">
                            </div>
                            <label>Add Multiple Users</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="ms-5">
                                <img src="~/images/permission.png" width="50" height="50">
                            </div>
                            <label>Edit User Permissions</label>
                        </div>
                        
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-4">
                            <div class="ms-5">
                                <img src="~/images/credit-card.png" width="50" height="50">
                            </div>
                            <label>Accept Payments Online</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="ms-5">
                                <img src="~/images/settings.png" width="50" height="50">
                            </div>
                            <label>Edit Firm Info & Settings</label>
                        </div>
                        @*<div class="col-lg-4">
                            <div class="ms-5">
                                <img src="~/images/permission.png" width="50" height="50">
                            </div>
                            <label>Edit User Permissions</label>
                        </div>*@
                    </div>
                </div>
            </div>

            <div class="card mt-5">
                <div class="card-header">
                    Active Firm Users
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        Name
                                    </th>
                                    
                                    <th>
                                        Last Login
                                    </th>
                                </tr>
                            </thead>
                            @{
                                int i = 1;
                            }
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/images/blank-profile.png" width="500" height="600">
                                            </td>
                                            <td class="py-1">
                                                @item.FirstName @item.LastName
                                            </td>
                                            <td class="py-1">
                                                8:10 pm
                                            </td>
                                        </tr>
                                        i++;

                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    Profile Summary
                </div>
                <div class="card-body">
                    <div class="row" style="display:inline-flex">
                        
                        <h5><img src="~/images/blank-profile.png" alt="" style="border-radius:30px" width="50" height="50"> Welcome, <span>@ViewBag.UserData.FirstName @ViewBag.UserData.LastName</span></h5>
                    </div>
                </div>
            </div>

            <div class="card mt-5">
                <div class="card-header">
                    Last Invoices
                </div>
                <div class="card-body" style="min-height:500px">
                    @*<div class="row" style="display:inline-flex">

                        <h5><img src="~/images/blank-profile.png" alt="" style="border-radius:30px" width="50" height="50"> Welcome, <span>@ViewBag.UserData.FirstName @ViewBag.UserData.LastName</span></h5>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>

